  "authors": ["mrerenk"],
  "contact": {
    "homepage": "https://github.com/mrerenk/MapDistanceFix",
    "sources": "https://github.com/mrerenk/MapDistanceFix",
    "issues": "https://github.com/mrerenk/MapDistanceFix/issues"
  },
  "license": "MIT",
  "icon": "assets/mapdistancefix/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": ["com.mrerenk.mapdistancefix.client.MapdistancefixClient"]
  },
  "mixins": [
    {
      "config": "mapdistancefix.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-api": ">=${min_fabric_version}",
    "minecraft": "${minecraft_version_range}"
